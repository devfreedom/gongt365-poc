    </header>


    <!-- Cards start here -->
    <div id="cards-container" class="h-full w-full bg-white">
        

        <!-- Map card -->
        <div id="map-card" class="h-full w-full">
            <div class="flex flex-col w-full h-full bg-blue-300">
                <div class="flex flex-row p-2 items-center justify-between">
                    <h1 class="text-bold font-black text-lg px-3">지도</h1>
                    <button id="currentPosBtn" class="toggleBtn flex flex-row p-2 toggleBtnOff rounded-lg items-center"><img src="./img/current-location-btn.svg" class="w-5 mr-2">현재 위치</button>
                </div>
                <div id="map-wrapper" class="w-full h-full">
                    <div id="map" style="width: 100%; height: 100%;"></div> 
                </div>
                <div id="poi-list" class="w-full min-h-[30%] max-h-[50%] bg-yellow-300 overflow-y-auto">
                
                        <h3 class="text-md"><%= poiList %></h3>

                </div>
            </div>
        </div>

        <!-- Workout card -->
        <div id="workout-card" class="h-full w-full hidden">
            <div class="flex w-full bg-blue-300 p-8">
                <div class="p-5">
                    <h1 class="text-bold font-black text-lg">Workout</h1>
                </div>
            </div>
        </div>


        <!-- Meetup card -->
        <div id="meetup-card" class="h-full w-full hidden">
            <div class="flex w-full bg-blue-300 p-8">
                <div class="p-5">
                    <h1 class="text-bold font-black text-lg">Meetup</h1>
                </div>
            </div>
        </div>


