  <!-- Viewport starts here -->
  <div id="viewport" class="flex flex-col h-[100vh] w-[47vh] justify-between">

    <!-- Header starts here -->
    <header class="flex w-full h-16 bg-white items-center justify-between">
        <div id="header-logo" class="flex flex-row w-full h-full mx-3"> 
            <img src="../img/gongt365-icon.svg" class="object-scale-down p-2"><img src="../img/gongt365-typo.svg" class="object-scale-down p-2">
